<StimulationSet>

    <!-- the injectionSite must match a regionLabel deefined in the morphology -->
   <!-- 20 Glu and Ca pulses / sec for 1 sec * 20 trains = 400 pulses -->

<!-- Train 1 -->
<InjectionStim specieID="GluGbuf" injectionSite="sa1[0].pointA">
        <onset>               50000          </onset>
        <duration>            5              </duration>
        <rate>                18.0           </rate>
        <period>              50             </period>
        <end>                 50999          </end>
        <numTrains>           20             </numTrains>
        <interTrainInterval>  9001          </interTrainInterval>   
</InjectionStim>

<!-- pulse 1 to produce 0.5 uM alone -->
<InjectionStim specieID="DaDbuf" injectionSite="sa1[0].pointA">
        <onset>               50000          </onset>
        <duration>            15              </duration>
        <rate>                36            </rate>
        <period>              50             </period>
        <end>                 50010          </end>
        <numTrains>           20             </numTrains>
        <interTrainInterval>  9990          </interTrainInterval>   
</InjectionStim>

<!-- pulse 2 = half of pulse 1 -->
<InjectionStim specieID="DaDbuf" injectionSite="sa1[0].pointA">
        <onset>               50050          </onset>
        <duration>            15              </duration>
        <rate>                18.0           </rate>
        <period>              50             </period>
        <end>                 50060          </end>
        <numTrains>           20             </numTrains>
        <interTrainInterval>  9990          </interTrainInterval>   
</InjectionStim>

<!-- pulse 3 = half of pulse 2  -->
<InjectionStim specieID="DaDbuf" injectionSite="sa1[0].pointA">
        <onset>               50100          </onset>
        <duration>            15              </duration>
        <rate>                12.6           </rate>
        <period>              50             </period>
        <end>                 50110          </end>
        <numTrains>           20             </numTrains>
        <interTrainInterval>  9990          </interTrainInterval>   
</InjectionStim>

<!-- pulses 4-20 = half of pulse 3, faster injection to decrease stochasticity-->
<InjectionStim specieID="DaDbuf" injectionSite="sa1[0].pointA">
        <onset>               50150          </onset>
        <duration>            15              </duration>
        <rate>                9           </rate>
        <period>              50             </period>
        <end>                 50999          </end>
        <numTrains>           20             </numTrains>
        <interTrainInterval>  9151          </interTrainInterval>   
</InjectionStim>

<InjectionStim specieID="Ca" injectionSite="sa1[0].pointA">
        <onset>               50000          </onset>
        <duration>            3              </duration>
        <rate>                156            </rate>
        <period>              50             </period>
        <end>                 50999          </end>
        <numTrains>           20             </numTrains>
        <interTrainInterval>  9001          </interTrainInterval>  
</InjectionStim>

<InjectionStim specieID="Ca" injectionSite="dend:submembrane">
        <onset>               50000          </onset>
        <duration>            3              </duration>
        <rate>                156            </rate>
        <period>              50             </period>
        <end>                 50999          </end>
        <numTrains>           20             </numTrains>
        <interTrainInterval>  9001          </interTrainInterval>  
</InjectionStim>

<!-- basal ACh value prior to stim = desired conc * decay rate -->
<InjectionStim specieID="ACh" injectionSite="dend:submembrane">
        <onset>               0          </onset>
        <duration>            50000      </duration>
        <rate>                0.5         </rate>
</InjectionStim>
<!-- basal ACh stim paused during Da stim-->
<InjectionStim specieID="ACh" injectionSite="dend:submembrane">
        <onset>               52400          </onset>
        <duration>            7800      </duration>
        <rate>                0.5         </rate>
        <period>              10000             </period>
        <end>                 300000          </end>
</InjectionStim>
<!-- burst during stim : Assume that ACh neurons can follow 20 Hz -->
<InjectionStim specieID="ACh" injectionSite="sa1[0].pointA">
        <onset>               50000          </onset>
        <duration>            15              </duration>
        <rate>                8.0           </rate>
        <period>              50             </period>
        <end>                 50999          </end>
        <numTrains>           20             </numTrains>
        <interTrainInterval>  9001          </interTrainInterval>  
</InjectionStim>

<!-- Should this stimulation be eliminated???-->
