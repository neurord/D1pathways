        <onset>               0          </onset>
        <duration>            20000      </duration>
        <rate>                0.3         </rate>
</InjectionStim>
<InjectionStim specieID="ACh" injectionSite="dend:submembrane">
        <onset>               220000          </onset>
        <duration>            200000      </duration>
        <rate>                0.3         </rate>
</InjectionStim>
